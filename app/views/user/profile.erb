<h3>Welcome, <%= @user.username %>
<h4> Here is a list of all your donations: </h4> 

<table> 
<tr>
    <th>Charity Name</th>
    <th>Amount</th>
    <th>Date</th>
    <th>Edit Donation</th>
    <th>Delete Donation</th> 
</tr>

    <% @user.donations.each do |donation| %>
        <tr>
            <td> <%= Charity.find_by_id(donation.charity_id)%>
            <td><%= donation.amount %></td>
            <td><%= donation.created_on.strftime('%m/%d/%y') %></td>
            <td><a href="/donations/<%= donation.id %>/edit">Edit</a></td>
            <td><a href="/donations/<%= donation.id%>/delete">Delete</a></td>
        </tr>
    <% end %> 

</table> 

<a href='/donations/new'>Add a new donation</a>

<table>
<th> Charity Name </th> 
<th> Charity Description </th>
<th> Edit Charity </th> 
<th> Delete Charity </th>
<tr> 
    <% @charities.each do |charity| %>
    <td> <%= charity.name %></td>
    <td> <%= charity.description %> 
    <td> <a href= "/charities/<%= charity.id %>/edit">Edit</a> </td> 
    <td> <a href="/charities/<%= charity.id %>/delete">Delete</a></td>
    <%end%>
</tr> 
</table> 
<a href="/charities/new">Add a new charity</a>

<form method="post" action="/logout">
<input type="submit" value="Log Out">
</form>